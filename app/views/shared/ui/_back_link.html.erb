<% if false %>
  Back link component
  Usage:
    <%= render 'shared/ui/back_link', path: backoffice_account_path(@account), text: "Voltar para a conta" %>
    <%= render 'shared/ui/back_link', path: "/some/path" %>
    <%= render 'shared/ui/back_link', path: :back %>
<% end %>
<%
  path = local_assigns[:path] || local_assigns[:url] || :back
  text = local_assigns[:text] || local_assigns[:label] || "Voltar"
  link_class = local_assigns[:class] || "flex space-x-2 items-center text-sm text-slate-600 hover:text-slate-900"
%>
<%= link_to path, class: link_class do %>
  <i class="material-symbols-outlined">arrow_back</i>
  <%= content_tag(:span, text, class: "") unless local_assigns[:only_icon] %>
<% end %>
