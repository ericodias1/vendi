<% if false %>
  Search Input component
  Usage:
    <%= render 'shared/ui/search_input', 
        form: form, 
        field: :search, 
        placeholder: "Buscar produto...",
        hint: "Ex: vestido, conjunto, body" %>
<% end %>
<%
  form = local_assigns[:form]
  field = local_assigns[:field] || :search
  placeholder = local_assigns[:placeholder] || "Buscar..."
  hint = local_assigns[:hint]
  input_class = local_assigns[:class] || ""
%>
<div class="<%= input_class %>">
  <label class="flex flex-col w-full">
    <div class="flex w-full items-center rounded-xl bg-[#e7f3eb] dark:bg-gray-800 h-14 px-4 shadow-sm border border-transparent focus-within:border-primary/30 transition-all">
      <svg class="w-5 h-5 text-[#4e9767] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <%= form.text_field field, 
          value: params[field],
          placeholder: placeholder,
          class: "flex-1 bg-transparent border-none focus:ring-0 text-[#0e1b12] dark:text-white placeholder:text-[#4e9767]/70 text-base" %>
    </div>
  </label>
  <% if hint.present? %>
    <p class="text-[#4e9767] dark:text-[#7ab88e] text-xs font-medium mt-2 px-1"><%= hint %></p>
  <% end %>
</div>
