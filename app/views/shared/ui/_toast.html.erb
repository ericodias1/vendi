<% if false %>
  Toast notification component
  Usage:
    <%= render 'shared/ui/toast', type: :success, message: "Operação realizada com sucesso!" %>
    <%= render 'shared/ui/toast', type: :error, message: "Erro ao processar requisição" %>
    <%= render 'shared/ui/toast', type: :warning, message: "Atenção: verifique os dados" %>
    <%= render 'shared/ui/toast', type: :info, message: "Informação importante" %>
<% end %>
<% 
  type = local_assigns[:type] || :info
  message = local_assigns[:message] || ""
  duration = local_assigns[:duration] || 5000
  toast_id = local_assigns[:id] || "toast-#{SecureRandom.hex(4)}"
  
  type_classes = {
    success: "toast-success",
    error: "toast-error",
    warning: "toast-warning",
    info: "toast-info"
  }
  
  type_icon = {
    success: '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>',
    error: '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>',
    warning: '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 9V13M12 17H12.01M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>',
    info: '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 16V12M12 8H12.01M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>'
  }
%>
<div id="<%= toast_id %>" 
     class="toast <%= type_classes[type] %>" 
     data-controller="toast" 
     data-toast-duration-value="<%= duration %>"
     role="alert">
  <div class="toast-content">
    <div class="toast-icon">
      <%= raw type_icon[type] %>
    </div>
    <div class="toast-message">
      <%= message %>
    </div>
    <button type="button" 
            class="toast-close" 
            data-action="click->toast#close"
            aria-label="Fechar">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
</div>
