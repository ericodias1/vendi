<% if false %>
  View Mode Selector component
  Usage:
    <%= render 'shared/ui/view_mode_selector',
        current_mode: @account_config.products_view_mode,
        cards_path: update_view_mode_backoffice_products_path(view_mode: 'cards'),
        table_path: update_view_mode_backoffice_products_path(view_mode: 'table') %>
<% end %>
<%
  current_mode = local_assigns[:current_mode] || "cards"
  cards_path = local_assigns[:cards_path]
  table_path = local_assigns[:table_path]
  
  cards_active = current_mode == "cards"
  table_active = current_mode == "table"
  
  base_classes = "flex items-center justify-center w-10 h-10 rounded-lg transition-all duration-200"
  active_classes = "bg-primary text-white shadow-sm"
  inactive_classes = "bg-white dark:bg-surface-dark text-slate-500 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800"
%>

<div class="hidden md:flex items-center gap-1 bg-slate-100 dark:bg-slate-800 p-1 rounded-xl">
  <%= link_to cards_path,
      data: { turbo_method: :patch },
      class: "#{base_classes} #{cards_active ? active_classes : inactive_classes}",
      title: "Visualização em cards" do %>
    <span class="material-symbols-outlined text-xl">grid_view</span>
  <% end %>
  
  <%= link_to table_path,
      data: { turbo_method: :patch },
      class: "#{base_classes} #{table_active ? active_classes : inactive_classes}",
      title: "Visualização em tabela" do %>
    <span class="material-symbols-outlined text-xl">view_list</span>
  <% end %>
</div>
