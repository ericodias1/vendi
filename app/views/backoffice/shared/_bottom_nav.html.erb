<%
  current_path = request.path
%>

<nav class="fixed bottom-0 left-0 right-0 z-40 bg-white border-t border-slate-200 md:hidden">
  <div class="flex items-center justify-around h-16">
    <%= link_to backoffice_root_path,
        class: "flex flex-col items-center justify-center flex-1 h-full text-slate-600 hover:text-primary transition-colors #{current_path == backoffice_root_path ? 'text-primary' : ''}" do %>
      <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      <span class="text-xs">Início</span>
    <% end %>

    <%= link_to backoffice_products_path,
        class: "flex flex-col items-center justify-center flex-1 h-full text-slate-600 hover:text-primary transition-colors #{current_path == backoffice_products_path || current_path.start_with?('/backoffice/products') ? 'text-primary' : ''}" do %>
      <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
      </svg>
      <span class="text-xs">Estoque</span>
    <% end %>

    <%= link_to backoffice_sales_path,
        class: "flex flex-col items-center justify-center flex-1 h-full text-slate-600 hover:text-primary transition-colors #{current_path == backoffice_sales_path || current_path.start_with?('/backoffice/sales') ? 'text-primary' : ''}" do %>
      <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <span class="text-xs">Vendas</span>
    <% end %>

    <%= link_to backoffice_reports_path,
        class: "flex flex-col items-center justify-center flex-1 h-full text-slate-600 hover:text-primary transition-colors #{current_path == backoffice_reports_path || current_path.start_with?('/backoffice/reports') ? 'text-primary' : ''}" do %>
      <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
      <span class="text-xs">Relatórios</span>
    <% end %>

    <button type="button"
            class="flex flex-col items-center justify-center flex-1 h-full text-slate-600 hover:text-primary transition-colors"
            data-action="click->sidebar#toggle"
            aria-label="Menu">
      <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <span class="text-xs">Mais</span>
    </button>
  </div>
</nav>
