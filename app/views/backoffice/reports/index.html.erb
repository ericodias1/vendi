<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <%= render 'shared/ui/heading',
        text: "Relatórios",
        size: :xl,
        description: "Veja o que está dando lucro, o que está travando dinheiro e o que precisa de ação imediata." %>
  </div>

  <!-- Categorias de Relatórios -->
  <% @report_categories.each do |category_key, reports| %>
    <div class="mb-8">
      <!-- Título da Categoria -->
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center">
          <span class="material-symbols-outlined text-xl text-primary">
            <%= report_category_icon(category_key) %>
          </span>
        </div>
        <%= render 'shared/ui/heading',
            text: report_category_title(category_key),
            size: :lg,
            class: "mb-0" %>
      </div>

      <!-- Cards de Relatórios -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% reports.each do |report| %>
          <%= render 'backoffice/reports/shared/report_card', report: report %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
