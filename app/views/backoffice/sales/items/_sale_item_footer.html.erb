<%
  item = local_assigns[:item]
  product = item.product
  sale_obj = local_assigns[:sale] || @sale
%>

<div id="sale_item_<%= item.id %>" class="flex items-center gap-3 py-2 border-b border-gray-100 dark:border-gray-700 last:border-0">
  <div class="w-10 h-10 bg-gray-100 dark:bg-gray-700 rounded-lg overflow-hidden shrink-0">
    <% if product.images.attached? %>
      <%= image_tag product.images.first, alt: product.name, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    <% end %>
  </div>
  <div class="flex-1 min-w-0">
    <p class="font-medium text-sm text-[#0e1b12] dark:text-white truncate"><%= product.name %></p>
    <p class="text-xs text-gray-500 dark:text-gray-400">
      <%= number_to_currency(item.unit_price, unit: "R$ ", separator: ",", delimiter: ".") %> × <%= item.quantity %>
    </p>
  </div>
  <div class="flex items-center gap-1 shrink-0">
    <div class="flex items-center gap-0 bg-gray-100 dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-600">
      <%= form_with url: backoffice_sale_item_path(sale_obj, item), method: :patch, data: { turbo_frame: "_top" }, html: { id: "item_#{item.id}_decrement", class: "inline" } do |f| %>
        <%= hidden_field_tag :quantity, [item.quantity - 1, 1].max %>
        <button type="submit" class="p-1.5 text-primary font-bold text-lg leading-none" style="color: var(--color-primary);">－</button>
      <% end %>
      <span class="text-sm font-bold min-w-[20px] text-center px-1" id="item_quantity_<%= item.id %>"><%= item.quantity %></span>
      <%= form_with url: backoffice_sale_item_path(sale_obj, item), method: :patch, data: { turbo_frame: "_top" }, html: { id: "item_#{item.id}_increment", class: "inline" } do |f| %>
        <%= hidden_field_tag :quantity, item.quantity + 1 %>
        <button type="submit" class="p-1.5 text-primary font-bold text-lg leading-none" style="color: var(--color-primary);">＋</button>
      <% end %>
    </div>
    <%= button_to backoffice_sale_item_path(sale_obj, item),
        method: :delete,
        form: { data: { turbo_frame: "_top", turbo_confirm: "Remover este item da venda?" }, class: "inline" },
        class: "p-1.5 rounded text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors",
        title: "Remover" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
</div>
