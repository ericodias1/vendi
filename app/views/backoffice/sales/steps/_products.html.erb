<%
  products = local_assigns[:products] || []
  recent_products = local_assigns[:recent_products] || []
  sale = local_assigns[:sale]
%>

<div data-controller="sale-form" data-sale-form-step-value="1" x-data="{ showItemsModal: false }">
  <%= render 'shared/ui/step_header',
      title: "Registrar venda",
      current_step: 1,
      total_steps: 3,
      back_path: backoffice_sales_path %>

  <main class="flex-1 pb-48">
    <!-- SearchBar - sticky apenas no mobile para economizar espaço -->
    <div class="px-4 py-2 max-lg:sticky max-lg:-top-4 max-lg:z-20 max-lg:bg-background-light max-lg:dark:bg-background-dark">
      <%= form_with url: edit_backoffice_sale_products_path(sale), method: :get, local: true, data: { turbo_frame: "_top" } do |f| %>
        <%= render 'shared/ui/search_input',
            form: f,
            field: :search,
            placeholder: "Buscar produto...",
            hint: "Ex: vestido, conjunto, body" %>
      <% end %>
    </div>

    <!-- Recentes (Chips) -->
    <% if recent_products.any? %>
      <div class="mt-4">
        <div class="flex items-center justify-between px-4 mb-3">
          <%= render 'shared/ui/heading', text: "Recentes", size: :md, class: "mb-0" %>
        </div>
        <div class="flex gap-2 overflow-x-auto px-4 no-scrollbar pb-2">
          <% recent_products.each do |product| %>
            <%= form_with url: backoffice_sale_items_path(sale), method: :post, local: false, data: { turbo_frame: "_top" }, class: "inline-block" do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.hidden_field :quantity, value: 1 %>
              <%= f.hidden_field :unit_price, value: product.base_price || 0 %>
              <%= render 'shared/ui/chip', text: product.name, variant: :primary, class: "cursor-pointer hover:bg-primary/20 transition-colors" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Lista de Produtos (Foto, REF, Nome, Variações, Preço, Adicionar) -->
    <div class="px-4 mt-4">
      <%= render 'shared/ui/heading', text: "Produtos", size: :md, class: "mb-2" %>
      <% if products.any? %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 divide-y divide-gray-100 dark:divide-gray-700">
          <% products.each do |product| %>
            <%= render 'backoffice/sales/products/product_list_row', product: product, sale: sale %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-primary/5 border border-dashed border-primary/30 rounded-xl p-6 flex flex-col items-center text-center">
          <svg class="w-12 h-12 text-primary/50 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <p class="text-gray-600 dark:text-gray-300 font-medium mb-4">Produto não encontrado?</p>
          <%= render 'shared/ui/button',
              text: "Criar produto rápido",
              href: new_backoffice_product_path,
              variant: :secondary,
              size: :sm %>
        </div>
      <% end %>
    </div>
  </main>

  <!-- Footer sticky: Itens na venda + Resumo + Continuar -->
  <div class="fixed-footer">
    <div id="sale_items_section" class="mb-3 max-h-40 overflow-y-auto max-lg:hidden">
      <% if sale.sale_items.any? %>
        <p class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-tight mb-2 px-1">Itens na venda</p>
        <div id="sale_items_list" class="bg-white dark:bg-gray-800 rounded-lg border border-gray-100 dark:border-gray-700 p-2">
          <% sale.sale_items.each do |item| %>
            <%= render 'backoffice/sales/items/sale_item_footer', item: item, sale: sale %>
          <% end %>
        </div>
      <% else %>
        <div id="sale_items_list" class="hidden"></div>
      <% end %>
    </div>
    <%= render 'backoffice/sales/steps/sale_summary', sale: sale, show_alterar_on_mobile: true %>
    <div id="continue_button">
      <%= render 'shared/ui/button',
          href: edit_backoffice_sale_details_path(sale),
          variant: :primary,
          size: :lg,
          width: "w-full",
          class: sale.sale_items.empty? ? 'opacity-50 cursor-not-allowed pointer-events-none' : '',
          disabled: sale.sale_items.empty? do %>
        Continuar
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>
    <div class="h-4"></div>
  </div>

  <!-- Modal de itens (apenas mobile) -->
  <div x-show="showItemsModal"
       x-transition:enter="transition ease-out duration-300"
       x-transition:enter-start="opacity-0"
       x-transition:enter-end="opacity-100"
       x-transition:leave="transition ease-in duration-200"
       x-transition:leave-start="opacity-100"
       x-transition:leave-end="opacity-0"
       class="fixed inset-0 z-50 bg-black/40 flex items-end justify-center lg:hidden"
       style="display: none;"
       @click.self="showItemsModal = false">

    <div x-show="showItemsModal"
         x-transition:enter="transition ease-out duration-300"
         x-transition:enter-start="translate-y-full"
         x-transition:enter-end="translate-y-0"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="translate-y-0"
         x-transition:leave-end="translate-y-full"
         class="bg-white dark:bg-[#1a2e20] w-full max-h-[85vh] rounded-t-2xl shadow-2xl flex flex-col"
         @click.stop>

      <div class="w-12 h-1.5 bg-gray-200 dark:bg-gray-700 rounded-full mx-auto mt-3 mb-4 shrink-0"></div>

      <div class="px-4 pb-2 flex items-center justify-between shrink-0">
        <h2 class="text-lg font-bold text-[#0e1b12] dark:text-white">Itens na venda</h2>
        <button type="button"
                @click="showItemsModal = false"
                class="p-2 -m-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors">
          <span class="material-symbols-outlined">close</span>
        </button>
      </div>

      <div id="sale_items_modal_list" class="flex-1 overflow-y-auto px-4 pb-6">
        <%= render 'backoffice/sales/items/sale_items_modal_list', sale: sale %>
      </div>
    </div>
  </div>
</div>
