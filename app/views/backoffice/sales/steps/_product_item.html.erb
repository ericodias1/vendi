<%
  product = local_assigns[:product]
  sale = local_assigns[:sale]
  sale_item = sale&.sale_items&.find_by(product: product)
  quantity = sale_item&.quantity.to_i || 0
  has_selection = quantity > 0
%>

<div class="bg-white dark:bg-gray-800 p-4 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 flex flex-col gap-4" 
     data-controller="product-selector"
     data-product-selector-product-id-value="<%= product.id %>"
     data-product-selector-product-name-value="<%= product.name %>"
     data-product-selector-product-price-value="<%= product.base_price || 0 %>"
     data-product-selector-stock-value="<%= product.stock_quantity %>"
     data-product-selector-sale-id-value="<%= sale.id %>">
  <div class="flex gap-4">
    <div class="w-20 h-20 bg-gray-100 dark:bg-gray-700 rounded-lg overflow-hidden flex-shrink-0">
      <% if product.images.attached? %>
        <%= image_tag product.images.first, alt: product.name, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full flex items-center justify-center">
          <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      <% end %>
    </div>
    <div class="flex-1">
      <div class="flex justify-between items-start">
        <h4 class="font-bold text-[#0e1b12] dark:text-white"><%= product.name %></h4>
        <span class="font-bold text-primary" style="color: var(--color-primary);">
          <%= number_to_currency(product.base_price || 0, unit: "R$ ", separator: ",", delimiter: ".") %>
        </span>
      </div>
      <% if product.sku.present? %>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Ref: <%= product.sku %></p>
      <% end %>
      
      <!-- Size Pills -->
      <% if product.size.present? %>
        <div class="flex gap-2 mt-3">
          <span class="w-10 h-8 rounded-lg flex items-center justify-center text-xs font-bold bg-primary/20 text-primary border border-primary/30">
            <%= product.size %>
          </span>
        </div>
      <% end %>
      
      <!-- Alerta de estoque baixo -->
      <% if product.low_stock? %>
        <div class="flex items-center gap-1 mt-1 text-[#f59e0b]">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <span class="text-xs font-semibold">Baixo estoque (<%= product.stock_quantity %> un)</span>
        </div>
      <% end %>
    </div>
  </div>
  
  <% if has_selection %>
    <!-- Stepper de Quantidade -->
    <div class="flex items-center justify-between pt-2 border-t border-gray-50 dark:border-gray-700">
      <span class="text-xs font-medium text-gray-400 uppercase tracking-tight">Quantidade</span>
      <div class="flex items-center gap-4 bg-gray-50 dark:bg-gray-900 rounded-full px-4 py-1 border border-gray-100 dark:border-gray-700">
        <%= form_with url: backoffice_sale_item_path(sale, sale_item), method: :patch, local: false, data: { turbo_frame: "_top" } do |f| %>
          <%= f.hidden_field :quantity, value: [quantity - 1, 1].max %>
          <button type="submit" class="text-primary font-bold text-xl leading-none" style="color: var(--color-primary);">－</button>
        <% end %>
        <span class="text-base font-bold min-w-[20px] text-center"><%= quantity %></span>
        <%= form_with url: backoffice_sale_item_path(sale, sale_item), method: :patch, local: false, data: { turbo_frame: "_top" } do |f| %>
          <%= f.hidden_field :quantity, value: quantity + 1 %>
          <button type="submit" class="text-primary font-bold text-xl leading-none" style="color: var(--color-primary);">＋</button>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Botão Adicionar -->
    <%= form_with url: backoffice_sale_items_path(sale), method: :post, local: false, data: { turbo_frame: "_top" } do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.hidden_field :quantity, value: 1 %>
      <%= f.hidden_field :unit_price, value: product.base_price || 0 %>
      <button type="submit" class="mt-3 w-full py-2 rounded-lg bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 text-primary text-sm font-bold flex items-center justify-center gap-1" style="color: var(--color-primary);">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Adicionar
      </button>
    <% end %>
  <% end %>
</div>
