<%
  product = local_assigns[:product]
  selected = local_assigns[:selected]
  redirect_query = local_assigns[:redirect_query] || {}
%>
<td class="px-2 py-3 w-10" onclick="event.stopPropagation()">
  <div data-controller="label-selection"
       data-label-selection-add-url-value="<%= add_backoffice_labels_products_path(redirect_query) %>"
       data-label-selection-remove-url-value="<%= remove_backoffice_labels_products_path(redirect_query) %>"
       data-label-selection-product-id-value="<%= product.id %>"
       class="inline">
    <label class="flex items-center cursor-pointer">
      <input type="checkbox"
             class="checkbox-primary cursor-pointer"
             <%= "checked" if selected %>
             data-action="change->label-selection#toggle" />
    </label>
  </div>
</td>
